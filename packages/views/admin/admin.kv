#: import Users views.users.Users
#: import Stocks views.stocks.Stocks
#: import Insights views.insights.Insights


<Admin>:
    spacing: dp(12)    
    padding: [dp(32), dp(16)]
    BackBox:
        radius: [self.width*.1]
        orientation: 'vertical'
        spacing: dp(12)
        size_hint_x: .2
        bcolor: app.color_primary
        padding: dp(12)
        BoxLayout:
            #size_hint_x: .8#
            size_hint_y: None
            height: self.width
            padding: dp(4)
            #orientation: 'vertical'#
            #spacing: dp(12)#

            #width: dp(12)#
            Image: 
                source: "assets/imgs/logo-dark.png"
        GridLayout:
            cols:1
            spacing: dp(12) 
            NavToggle:
                text: "Point-Of-Sale"
                icon: icon("icon-airplay")
                state: "down"
                on_release: scrn_mngr.current = "scrn_pos"
            NavToggle:
                text: "Manage Users"
                icon: icon("icon-users")
                on_release: scrn_mngr.current = "scrn_users"

            NavToggle:
                text: "Manage Stocks"
                icon: icon("icon-truck")
                on_release: scrn_mngr.current = "scrn_stocks"

            NavToggle:
                text: "Stock Insights"
                icon: icon("icon-bar-chart")
                on_release: scrn_mngr.current = "scrn_insights"

            
    BoxLayout:
        size_hint_x: .9
        orientation: "vertical"
        spacing: dp(12)
        BoxLayout:
            size_hint_y: None
            height: dp(54)
        ScreenManager:
            id: scrn_mngr
            Screen:
                name: "scrn_pos"
                Pos: 
                    id: pos
            Screen:
                name: "scrn_users"
                Users: 
                    id: users
            Screen:
                name: "scrn_stocks"
                Stocks: 
                    id: stocks
            Screen:
                name: "scrn_insights"
                Insights: 
                    id: insights
     
<NavToggle@ToggleButtonBehavior+BoxLayout>:
    size_hint_y: None
    height: dp(48)
    text: ""
    icon: ""
    group: "nav-items"
    spacing: dp(12)
    AnchorLayout: 
        anchor_y: "center"
        size_hint_x: None
        width: dp(4)
        Widget:
            canvas.before:
                Color:
                    rgba: [1,1,1,1] if root.state == "down" else [0,0,0,0]
                RoundedRectangle:
                    pos: self.pos
                    size: self.size
                    radius: [0,dp(6),dp(6),0]
    Text:
        text: root.icon
        color: [1,1,1,1]
        font_size:  app.fonts.size.h2
        width: dp(26)
        size_hint_x: None
    Text:
        text: root.text
        color: [1,1,1,1]
        font_size:  app.fonts.size.h2
        #width: dp(26)##
        #size_hint_x: None##



