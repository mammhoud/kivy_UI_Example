<Auth>:
	BoxLayout:
		orientation: "vertical"
		spacing: dp(24)
		padding: dp(24)
		canvas.before:
			Color:
				rgba: (1,1,1,1)
			Rectangle:
				pos: self.pos
				size: self.size
				source: "assets/imgs/bg-login.png"
		AnchorLayout:
			BoxLayout:
				orientation: "vertical"
				size_hint_y: .7
				size_hint_x: .8
				AnchorLayout:
					anchor_y: 'bottom'
					Image:
						source: 'assets/imgs/logo-light.png'
				
				BoxLayout:
					orientation: 'vertical'
					spacing: dp(24)
					Text:
						text: 'POINT-OF-SALE'
						font_name: app.fonts.heading
						font_size: app.fonts.size.extra
						color: app.color_primary_text
						halign: 'center'
						valign: 'bottom'
						#size_hint_y: None
						#height: dp(54)
					AnchorLayout:
						anchor_y: "top"
						Label:
							text: 'An AIO Cashier System degital Solution'
							text_size: [self.parent.width, None]
							font_name: app.fonts.subheading
							font_size: dp(18)
							size: self.texture_size
							color: app.color_primary_text
							halign: 'center'
							valign: 'top'
							size_hint_y: None

	
	BoxLayout:
		orientation: "vertical"
		spacing: dp(12)
		BoxLayout:
			orientation:'vertical'
			spacing: dp(12)
			size_hint_y: .3
			Text:
				text: "HELLO"
				font_name: app.fonts.styled
				font_size: app.fonts.size.extra
				color: app.color_primary_text
				halign: 'center'
				valign: 'bottom'
			AnchorLayout:
				anchor_y: "top"
				Label:
					text: 'Enter your Details to sign in and access to the system'
					text_size: [self.parent.width, None]
					font_name: app.fonts.subheading
					font_size: app.fonts.size.h3
					size: self.texture_size
					color: app.color_secondary_text
					halign: 'center'
					valign: 'top'
					size_hint_y: None
		AnchorLayout:
			size_hint_y: .5		
			BoxLayout:
				orientation: 'vertical'
				spacing: dp(24)
				padding: dp(24)
				size_hint_x: .7
				BackBox:
					size_hint_y: None
					height: dp(64)
					bcolor: app.color_secondary_bg
					radius: [self.height*.1]
					padding: [dp(12), dp(2)]
					FlatField:
						id: user_input
						hint_text: "Username"
						hint_text_color: app.color_primary_text
						font_size: app.fonts.size.h2
						multiline: False
				BackBox:
					size_hint_y: None
					height: dp(64)
					bcolor: app.color_secondary_bg
					radius: [self.height*.1]
					padding: [dp(12), dp(2)]
					FlatField:
						id: password_input
						hint_text: "Password"
						hint_text_color: app.color_primary_text
						font_size: app.fonts.size.h2
						password: True
						multiline: False


				BackBox:
					size_hint_y: None
					height: dp(64)
					RoundedButton:
						id: login_button
						text: "Sign"
						#hint_text_color: app.color_primary_text
						font_name: app.fonts.heading
						font_size: app.fonts.size.h1
						bcolor: app.color_primary
						radius: [self.height*.1]
						on_release: root.authenticate(user_input.text, password_input.text)
						
					BackBox:
						size_hint_y: None
						height: dp(64)
						FlatButton:
							text: "Don't have an account !?"
							#hint_text_color: app.color_primary_text
							font_name: app.fonts.subheading
							bcolor: app.color_tertiary

							font_size: app.fonts.size.h3
							color: app.color_primary_text
							radius: [self.height*.1]
					Widget:
				AnchorLayout:
					size_hint_y: .2
					padding: dp(24)
					Text:
						text: "V 0.1.0"
						font_size: app.fonts.size.h3
						valign: "bottom"
						halign: "center"
						color: app.color_primary_text				
			BoxLayout:
				size_hint_y: .2
				orientation: 'vertical'


<AuthSign>:
	background: ""
	background_color: [0,0,0,.21]
	BackBox:
		orientation: "vertical"
		spacing: dp(12)
		padding: dp(14)
		bcolor: app.color_primary_bg
		radius: [self.height*.08]
		size_hint: [None, .7]
		width: self.height
		BoxLayout:
			size_hint_y: .6
			orientation: 'vertical'
			Text:
				text: "Checkout"
				font_name: app.fonts.styled
				font_size: app.fonts.size.extra
				color:app.color_primary_text
				halign: 'center'
			Text:
				text: "are you sure, complete the signin with ???" #todo: and a name of the user  
				halign: 'center'
				font_size: app.fonts.size.h2
				color:app.color_primary_text
		AnchorLayout:
			BoxLayout:
				size_hint_y: .4
				spacing: dp(12)
				size_hint_y: .6
				height: dp(128)
				FlatButton:
					text: "cancel"
					font_size: app.fonts.size.h2
					color: app.color_tertiary
					on_release: root.dismiss()
					bcolor: app.color_secondary_bg
					#size_hint_y: None
				RoundedButton:
					text: "yes complete?"
					font_size: app.fonts.size.h2
					bcolor: app.color_primary
					color: app.color_secondary_text #rgba("#ffffff")
					radius: [self.height*.1]
					on_release: root.complete()
				#Divider:

		